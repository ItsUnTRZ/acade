<%= turbo_frame_tag dom_id(quest) do %>
  <div class="flex items-center justify-between p-4 border-b border-gray-200" >
    <div class="flex items-center space-x-4">
      <%= form_with model: quest, method: :patch do |f| %>
        <%= f.check_box :is_done,
            checked: quest.is_done, 
            class: "w-5 h-5 text-blue-600 rounded focus:ring-blue-500", 
            data: { controller: "checkbox", action: "change->checkbox#submit" } %>
      <% end %>
      <div class="text-lg <%= quest.is_done ? "line-through text-gray-500" : "text-gray-900" %>">
        <%= quest.name %>
      </div>
    </div>
    <%= link_to quest_path(quest), data: { turbo_method: :delete }, class: "text-red-500 hover:text-red-700 px-3 py-1" do %>
      Delete
    <% end %>
  </div>
<% end %>